gray(color, opacity = 1)
	return rgba(color, color, color, opacity)

*
	border: 0
	margin: 0
	padding: 0
	box-sizing: border-box

html
	height: 100%

body
	font-size: 12px
	font-family: Arial, sans-serif
	line-height: 1.4
	background-color: rgb(205, 92, 92)
	color: gray(80)
	height: 100%
	position: relative

h1, h2, h3, h4, h5, h6
	font-family: Arial, sans-serif

h1
	font-size: 3em
	font-family: 'Finger Paint', cursive
	color: rgb(0, 0, 0)

h2
	font-size: 1.4em
	margin: 1em 0 0.5em 0

h3
	font-size: 1.2em
	margin-bottom: 0.4em
	color: rgb(50, 50, 50)

h1 + p
	font-family: "Finger Paint", sans-serif
	//font-size: 1.2em
	font-style: italic
	font-weight: 100
	color: rgb(205, 92, 92)

a
	text-decoration: none
	color: steelblue

.ribbon
	position: absolute
	top: 0
	right: 0

table
	border-collapse: collapse
	margin-bottom: 1em
	caption
		text-align: left
		font-family: sans-serif
		font-size: 1.2em
		margin-bottom: 0.4em
		font-weight: 900
		color: gray(50)
	tr
		&:nth-of-type(2n)
			background-color: rgba(0, 0, 0, 0.05)
		&:nth-of-type(2n + 1)
			background-color: rgba(0, 0, 0, 0)
	th
		background-color: rgba(0, 0, 0, 0.05)
		font-family: sans-serif
		font-size: 0.9em
		&:empty
			display: none
	th,
	td
		padding 0.2em 0.4em
		border 1px solid rgb(180, 180, 180)
		&.code
			background rgb(45, 45, 45)
	pre
		margin: 0

pre
	font-size: 0.8em
	margin: 1em 0

p > code,
dd > code
	margin: 0 0.1em
	padding: 0.1em 0.5em
	border: 1px solid rgb(200, 200, 200)
	background-color: rgb(240, 240, 240)
	border-radius: 3px
	font-family: Consolas, 'Liberation Mono', Courier, monospace
	font-size: 0.9em

#wrapper
	margin: 0 auto
	background-color: rgb(230, 230, 230)

aside
	display none

nav
	padding: 1em 2em
	background-color: rgba(0, 0, 0, 0.1)
	ul
		list-style-type: none
		margin-bottom: 1em
		a
			text-decoration: none
			color: rgb(50, 50, 50)
			font-size: 0.9em
	> p
		display: block
		color: gray(140)
		font-size: 0.8em
		a
			text-decoration: none
			color: steelblue
	hr
		height: 1px
		position: relative
		left: -10px
		background-color: gray(0, 0.1)
		margin-bottom: 1em

#buttons
	margin-bottom: 1em
	.github
		display: inline
		height: 20px

article
	display: inline-block
	vertical-align: top
	padding: 2em
	hr
		height: 1px
		background-color: gray(0, 0.3)
		margin-bottom: 1.5em
		position: relative
		left: -10px

section
	margin-bottom: 4em
	h2
		font-size: 1.6em
		color: rgb(170, 10, 0)
		margin-bottom: 0.5em
		span
			color: gray(80)
			&:first-of-type
				color: rgb(205, 92, 92)
		& + p
			margin-bottom: 2em

	dl span,
	span.returns
		background-color: rgb(96, 131, 170)
		border-radius: 0.2em
		display: inline-block
		padding: 0 0.4em
		-webkit-font-smoothing: antialiased
		font-smoothing: antialiased
		color: white
		.function
			background-color: rgb(96, 131, 170)
		.object
			background-color: rgb(96, 131, 170)
		.number
			background-color: rgb(96, 131, 170)
		.boolean
			background-color: rgb(96, 131, 170)

	span.returns
		margin-right 2em

	.returnDesc
		display inline-block

	.args
		margin-bottom: 1.5em
		dt
			white-space: pre
			font-weight: 900
			display: inline
			&:before
				content: '\A'
			em
				display: inline-block
				width: 8em
				font-style: normal
		dd
			vertical-align: top
			margin: 0 0.5em 0.5em 0
			display: inline-block

	.name
		margin-bottom: 0.4em
		sup
			display: inline-block
			color: rgb(200, 20, 0)
			font-weight: 900

	.type
		span
			background-color: rgb(96, 131, 170)

	.default
		span
			background-color: rgb(110, 169, 117)
		&:empty
			background-color: transparent

	.properties
		background-color: rgba(0, 0, 0, 0.1)
		padding: 1em 2em
		margin: 1em 0
		dt
			margin-bottom: 0.4em
		dd
			vertical-align: top

	.desc
		width 20em

header
	margin-bottom: 3em

#description
	margin-bottom: 50px
	pre > code
		padding: 0.8em 1em

.returns
	margin-bottom: 2em


@media screen and (max-width 960px)

	table,
	tbody,
	th,
	td,
	tr
		display: block
		border: none !important

	thead
		display: none

	tr
		margin-bottom 2em
		padding-bottom 0.6em
		background-color: rgba(0, 0, 0, 0.05) !important

	td
		&.code
			margin-bottom 0.6em

		&::before
			font-size: 0.9em
			display inline-block
			color: rgb(160,160,160)
			width: 8em
			text-align right
			margin-right 0.5em

		&:nth-of-type(2):before
			content: "Description: "

		&:nth-of-type(3):before
			content: "Example Return: "


@media screen and (min-width 600px)

	section
		.desc
			max-width 25em
		.properties
			.desc
				width: 20em
			.dt
				min-width: 8em
		.default
			min-width: 8em
		.type
			min-width: 8em


@media screen and (min-width 960px)

	body
		font-size: 14px

	#wrapper
		width: 960px

	article
		width: 780px
		hr
			width: 760px

	aside
		display: inline-block
		vertical-align: top
		width: 160px
		height: 100%
		overflow-y: auto

	nav
		position: fixed
		overflow-y: auto
		height: 100%
		width: 160px
		hr
			width: 120px

	#buttons
		.github
			width: 100px
